<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sylius.payum.sagepay.action.capture_payment_using_sagepay_offsite.class">Ledjin\Bundle\SyliusSagepayBundle\Payum\Sagepay\Action\CapturePaymentUsingSagepayOffsiteAction</parameter>
        <parameter key="sylius.payum.sagepay.action.notify.class">Ledjin\Bundle\SyliusSagepayBundle\Payum\Sagepay\Action\NotifyAction</parameter>
    </parameters>
    <services>
        
        <!-- sagepay -->
        <service id="sylius.payum.sagepay.action.capture_payment_using_sagepay_offsite" class="%sylius.payum.sagepay.action.capture_payment_using_sagepay_offsite.class%">
            <call method="setCurrencyConverter">
                <argument type="service" id="sylius.currency_converter" />
            </call>
            <call method="setTokenFactory">
                <argument type="service" id="payum.security.token_factory" />
            </call>

            <tag name="payum.action" factory="sagepay_offsite" />
        </service>

        <service id="sylius.payum.sagepay.action.notify" class="%sylius.payum.sagepay.action.notify.class%">
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="sylius.manager.payment" />
            <argument type="service" id="sm.factory" />
            <argument>id</argument>

            <tag name="payum.action" factory="sagepay_offsite" />
        </service>

    </services>
</container>